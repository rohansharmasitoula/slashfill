{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {},
    "esModuleInterop": true,
    "outDir": "./dist/",
    "target": "es2017",
    "lib": ["dom", "esnext"],
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src"]
}
